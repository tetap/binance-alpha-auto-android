<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="actionMenuTextColor">#000000</item>
        <item name="titleTextColor">#000000</item>

        <!--开启时的颜色-->
        <item name="colorControlActivated">@color/colorAccent</item>

        <!-- 背景颜色 -->
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorBackgroundFloating">@color/colorBackgroundFloating</item>

        <!-- 文字颜色 -->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColorHint">@color/textColorHint</item>

        <!-- 分割线颜色 -->
        <item name="android:listDivider">@color/dividerColor</item>

        <!-- 涟漪效果 -->
        <item name="colorControlHighlight">@color/rippleColor</item>

        <!-- 状态栏和导航栏 -->
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>


        <!-- 卡片样式 -->
        <item name="cardBackgroundColor">@color/cardBackground</item>
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>

        <!-- 按钮样式 -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>
